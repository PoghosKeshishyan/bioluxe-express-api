generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String
  password String
}

model Category {
  id    String @id @default(uuid())
  lang  String
  descr String
  image String
  title String
}

model Item {
  id             String  @id @default(uuid())
  category_name  String
  product_number String  @unique
  price          Float
  heart_icon     Boolean

  title            Json
  btn_text         Json
  descr            Json
  product_material Json
  about_delivery   Json

  images ProductImage[]
  sizes  ProductSize[]

  createdAt           DateTime              @default(now())
  HomePagePopularItem HomePagePopularItem[]
}

model ProductImage {
  id        String @id @default(uuid())
  image     String
  productId String
  product   Item   @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductSize {
  id        String @id @default(uuid())
  size      String
  status    String
  productId String
  product   Item   @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model HomePagePopularItem {
  id        String   @id @default(uuid())
  itemId    String
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  order     Int? 
  createdAt DateTime @default(now())
}

model Navbar {
  id      String    @id @default(uuid())
  lang    String
  title   String
  route   String
  submenu Submenu[]
}

model Submenu {
  id       String  @id @default(uuid())
  lang     String
  title    String
  route    String
  Navbar   Navbar? @relation(fields: [navbarId], references: [id])
  navbarId String?
}

